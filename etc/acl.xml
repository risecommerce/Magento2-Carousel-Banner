<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Risecommerce_Banner::manage_banners" title="Manage Banners" translate="title" sortOrder="50">
                    <resource id="Risecommerce_Banner::add_banner" title="Add Banner" translate="title" sortOrder="10" />
                    <resource id="Risecommerce_Banner::edit_banner" title="Edit Banner" translate="title" sortOrder="20" />
                    <resource id="Risecommerce_Banner::delete_banner" title="Delete Banner" translate="title" sortOrder="30" />
                    <resource id="Risecommerce_Banner::change_status_banner" title="Change Banner Status" translate="title" sortOrder="40" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Risecommerce_Banner::config_banner" title="Banner Settings" translate="title" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
